<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= @user.age %>
  </p>

  <% if @user.avatar? %>
    <p>
      <strong>Avatar:</strong>
      <%= image_tag @user.avatar.url %>
    </p>
  <% end %>

  <%= link_to "Edit", edit_user_path(@user), class: "btn btn-main m-3" %> |
  <%= link_to "Back", users_path, class: "btn btn-link" %>
</div>
