<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= link_to "Show", user, class: "btn btn-main" %></td>
        <td><%= link_to "Edit", edit_user_path(user), class: "btn btn-main" %></td>
        <td><%= link_to "Destroy", user, class: "btn btn-main", method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New User", new_user_path, class: "btn btn-main m-3" %>
